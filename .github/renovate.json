{
  "extends": [
    "config:recommended"
  ],
  "labels": [
    "dependencies"
  ],
  "dependencyDashboard": true,
  "baseBranchPatterns": [
    "$default",
    "/^feature\\/.*/"
  ],
  "lockFileMaintenance": {
    "enabled": true
  },
  "packageRules": [
    {
      "groupName": "Kotlin",
      "matchPackageNames": [
        "org.jetbrains.kotlin:kotlin{/,}**",
        "org.jetbrains.kotlin.plugin.compose{/,}**"
      ]
    },
    {
      "matchBaseBranches": [
        "/^feature\\/.*/"
      ],
      "dependencyDashboardApproval": true
    }
  ]
}
